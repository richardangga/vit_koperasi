    <record id="ksp_jaminan_model_kanban_view" model="ir.ui.view">
        <field name="name">ksp.jaminan.model.kanban.view</field>
        <field name="model">ksp.jaminan.model</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="merk"/>
                <field name="name"/>
                <field name="image"/>
                <field name="tahun"/>
                <field name="harga_pasar"/>
